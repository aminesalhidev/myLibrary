{
  "compilerOptions": {
    "target": "es2015",            // Aggiorna il target a ES2015 o superiore
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"                      // Assicurati che es2015 sia incluso nelle librerie
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
